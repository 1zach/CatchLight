<% if @user.id == current_user.id%>
  <div class="user-info-options">
    <h1><%= @user.username %></h1>
    <div class="user-show-buttons">
      <%= link_to "Add a photo", new_photo_path(current_user),  class: "btn-black"%>

      <%= link_to "Edit your profile", edit_user_registration_path(current_user),  class: "btn-black"%>
    </div>
  </div>
    <h2>Your photos</h2>

<div class="user-show-container">
  <div class="col-12 col-lg-12">
    <ul class = "image-user">
      <% @user.photos.each do |photo| %>
        <li>
          <%= link_to photo_path(photo) do %>
          <%=display_photo(photo)%>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<div class="user-show-container">
  <h2>Liked photos</h2>
  <ul class = "image-user">
    <% @user.favorites.each do |favorite| %>
      <li>
        <% photo = Photo.find(favorite.favoritable_id)%>
        <%=display_photo(photo)%>
      </li>
    <% end %>
  </ul>
</div>

<% else%>

<h2> <%= @user.username %> photos</h2>


<div class="user-show-container">
    <ul class = "image-gallery">
      <% @user.photos.each do |photo| %>
        <li>
          <%= link_to photo_path(photo) do %>
          <%=display_photo(photo)%>
          <% end %>
        </li>
      <% end %>
    </ul>
</div>

<%end%>
