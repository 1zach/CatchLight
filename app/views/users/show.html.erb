<% if current_user.photos.count != 0 %>

    <div class="user-info-options">
      <div class="user-info">
        <%= render "shared/avatar" %>
        <h1><%= @user.username %></h1>
      </div>
        <div class="user-show-buttons">
          <%= link_to "Add a photo", new_photo_path(current_user),  class: "btn-black"%>

          <%= link_to "Edit your profile", edit_user_registration_path(current_user),  class: "btn-black"%>
        </div>
    </div>
      <h2>Your photos</h2>

  <div class="user-show-container">
    <div class="col-12 col-lg-12">
      <ul class = "image-user">
        <% @user.photos.each do |photo| %>
          <li>
            <%= link_to photo_path(photo) do %>
            <%=display_photo(photo)%>
            <% end %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>

  <div class="user-show-container">
    <h2>Liked photos</h2>
    <ul class = "image-user">
      <% @user.favorites.each do |favorite| %>
        <li>
          <% photo = Photo.find(favorite.favoritable_id)%>
           <%= link_to photo_path(photo) do %>
          <%=display_photo(photo)%>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% else %>
    <div class="user-0-photos">
    <%= render "shared/avatar" %>
    <h1><%= @user.username %></h1>

    <h2>add some picture to join the experience, share them with other creators. </h2>

    <%= link_to "Add a photo", new_photo_path(current_user),  class: "btn-black"%>

    <%= link_to "Edit your profile", edit_user_registration_path(current_user),  class: "btn-black"%>

  <div class="user-show-container">
    <h2>Liked photos</h2>
    <ul class = "image-user">
      <% @user.favorites.each do |favorite| %>
        <li>
          <% photo = Photo.find(favorite.favoritable_id)%>
           <%= link_to photo_path(photo) do %>
          <%=display_photo(photo)%>
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>
