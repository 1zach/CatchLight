

<%#=render "shared/search_box"%>
<h1>Search: <%=params[:query_location]%> Radius: <%=params[:query_radius]%>km Month: <%=params[:query_month]%></h1>
<%#=raise%>
<div class = "d-flex image-map-container" >
<div style="width: 100%; height: 600px;" class = "map"
  data-controller="map"
  data-map-markers-value="<%= @markers.to_json %>"
  data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
</div>


  <ul class = "image-gallery">
   <% @photos.each do |photo| %>
    <li>
    
      <%if photo.flickr%>
    <%= link_to photo_path(flickr: true, url: photo.url, id: photo.id) do %>
      <%= display_photo(photo) %>
      <%end%>
      <%else%>
      <%= link_to photo_path(photo) do%>
      <%= display_photo(photo)%>
      <%end%>
    <% end %>

    </li>
  <% end %>
  </div>
  </div>
