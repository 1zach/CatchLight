<%=image_tag photo.url, class: "popup-photo"%>

  <div class="window-content">
    <h2><i class="fa-solid fa-user opacity-25"></i>  <%=photo.creator%><h2>
    <div class="picture-time">
      <p><i class="fa-solid fa-calendar-days opacity-25"></i>  <%=photo.creation_date_time.strftime("%B %e, %Y")%></p>
      <p><i class="fa-solid fa-clock opacity-25"></i>  <%=photo.creation_date_time.strftime("%l:%M %p")%></p>
    </div>
  </div>
</div>
